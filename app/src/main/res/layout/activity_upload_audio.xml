<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadAudio">


    <View
        android:id="@+id/viewTop"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txtLiveSpeech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Upload Audio"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txtAudioFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Audio File"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewTop" />

    <TextView
        android:id="@+id/selectAudio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bg_filelist"
        android:fontFamily="@font/poppins_regular"
        android:hint="Select Audio"
        android:padding="10dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAudioFile" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/updown"
        app:layout_constraintBottom_toBottomOf="@+id/selectAudio"
        app:layout_constraintEnd_toEndOf="@+id/selectAudio"
        app:layout_constraintTop_toTopOf="@+id/selectAudio" />


    <ImageView
        android:id="@+id/icLiveRecorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/voicerecorder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icLiveRecorder" />

    <ImageView
        android:id="@+id/fotterLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:src="@drawable/footer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:id="@+id/imgPlus"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/upload_audio_file"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/icHome"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/home_active"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/fotterLayout"
        app:layout_constraintEnd_toStartOf="@+id/imgPlus"
        app:layout_constraintStart_toStartOf="@+id/fotterLayout"
        app:layout_constraintTop_toTopOf="@+id/fotterLayout" />


    <ImageView
        android:id="@+id/icSetting"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/setting_active"
        app:layout_constraintBottom_toBottomOf="@+id/fotterLayout"
        app:layout_constraintEnd_toEndOf="@+id/fotterLayout"
        app:layout_constraintStart_toEndOf="@+id/imgPlus"
        app:layout_constraintTop_toTopOf="@+id/fotterLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>